{
  "manifest_version": 2,

  "name": "perminent askew",
	"short_name": "askeeww",
  "description": "Askews any webpage",
  "version": "2.0",
  "content_scripts": [
    {
			"matches":["<all_urls>"],
      "js": ["content.js"]
    }
  ],
	"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" 
	},
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
